<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ErrorTextAppearance" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/error_text_color</item>
    </style>

    <style name="CustomRatingBarStyle" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_rating_bar</item>
        <item name="android:minHeight">15dip</item>
        <item name="android:maxHeight">47dip</item>
    </style>

    <style name="ReviewButton">
        <item name="cornerRadius">32dp</item>
        <item name="android:backgroundTint">@color/review_button_color</item>
    </style>

</resources>