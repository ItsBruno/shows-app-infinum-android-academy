<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/shows_nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="infinuma.android.shows.ui.authentication.LoginFragment"
        android:label="LoginFragment">
        <action
            android:id="@+id/actionLoginFragmentToShowsFragment"
            app:destination="@id/showsFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/actionLoginFragmentToRegisterFragment"
            app:destination="@id/registerFragment"/>
    </fragment>
    <fragment
        android:id="@+id/showsFragment"
        android:name="infinuma.android.shows.ui.all_shows.ShowsFragment"
        android:label="ShowsFragment">
        <action
            android:id="@+id/actionShowDetailsFragmentToLoginFragment"
            app:destination="@id/loginFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popUpTo="@id/showsFragment"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/actionShowsFragmentToShowDetailsFragment"
            app:destination="@id/showDetailsFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"/>
        <argument
            android:name="email"
            app:argType="string"/>
    </fragment>
    <fragment
        android:id="@+id/showDetailsFragment"
        android:name="infinuma.android.shows.ui.show_details.ShowDetailsFragment"
        android:label="ShowDetailsFragment">
        <argument
            android:name="showId"
            app:argType="string"/>
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="infinuma.android.shows.ui.authentication.RegisterFragment"
        android:label="RegisterFragment">
        <action
            android:id="@+id/actionRegisterFragmentToLoginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true"/>
    </fragment>
</navigation>